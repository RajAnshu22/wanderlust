






















<% layout("/layouts/boilerplate") %>
<body>
    <h4>All Listings</h4>

    <div class="row row-cols-lg-3">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <img src="<%= listing.image || '/images/default-listing.jpg' %>" 
                         class="card-img-top" 
                         alt="listing_image" 
                         style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title || 'Untitled Listing' %></b>
                        </p>
                        <p class="card-text">
                            <% if (listing.price && typeof listing.price === 'number') { %>
                                ₹<%= listing.price.toLocaleString("en-IN") %> / night
                            <% } else if (listing.price) { %>
                                ₹<%= listing.price %> / night
                            <% } else { %>
                                Price not available
                            <% } %>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <% if (!allListings || allListings.length === 0) { %>
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No listings found!</h4>
            <p>There are currently no listings available. <a href="/listings/new">Create a new listing</a> to get started.</p>
        </div>
    <% } %>
</body>









