<% layout("/layouts/boilerplate") %>

<style>
    .new-listing-container {
        max-width: 720px;
        margin: auto;
    }

    .form-label {
        font-weight: 500;
        color: #484848;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #b0b0b0;
        padding: 0.75rem 1rem;
    }

    .form-control:focus {
        border-color: #ff5a5f;
        box-shadow: 0 0 0 0.25rem rgba(255, 90, 95, 0.25);
    }
    
    .btn-create {
        background-color: #ff5a5f;
        border-color: #ff5a5f;
        color: white;
        font-weight: bold;
        padding: 0.75rem;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

    .btn-create:hover {
        background-color: #e02f35;
        border-color: #e02f35;
        color: white;
    }
</style>

<div class="container my-5 new-listing-container">
    <div class="row">
        <div class="col-12">
            <h2>Become a Host</h2>
            <p class="text-muted">Tell us a few things about your space to get started.</p>

            <hr class="my-4">

            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                
                <div class="mb-4">
                    <label for="title" class="form-label">Listing Title</label>
                    <input name="listing[title]" placeholder="e.g. Cozy Beachfront Cottage" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">A title is required.</div>
                </div>

                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Describe your property in a way that will excite guests!" class="form-control" required rows="4"></textarea>
                    <div class="invalid-feedback">Please enter a short description.</div>
                </div>

                <div class="mb-4">
                    <label for="image" class="form-label">Upload a Photo of Your Place</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                    <div class="invalid-feedback">An image is required to create a listing.</div>
                </div>

                <div class="row">
                    <div class="mb-4 col-md-6">
                        <label for="price" class="form-label">Price per night (in â‚¹)</label>
                        <input name="listing[price]" placeholder="e.g. 5000" type="number" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid price.</div>
                    </div>

                    <div class="mb-4 col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="e.g. India" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a country name.</div>
                    </div>
                </div>

                <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="e.g. Goa, India" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid.</div>
                </div>
                
                <hr class="my-4">

                <button class="btn btn-create w-100 mt-3">Create Listing</button>
            </form>
        </div>
    </div>
</div>